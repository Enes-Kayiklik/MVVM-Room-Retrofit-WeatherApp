<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBarDisplayFragment"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/progressDate"
        app:layout_constraintEnd_toEndOf="@+id/progressDate"
        app:layout_constraintStart_toStartOf="@+id/progressDate"
        app:layout_constraintTop_toBottomOf="@+id/tvClock" />

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateSunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="19:38"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/imgSunset"
        app:layout_constraintStart_toStartOf="@+id/imgSunset"
        app:layout_constraintTop_toBottomOf="@+id/imgSunset" />

    <TextView
        android:id="@+id/tvDateSunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="05:59"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/imgSunrise"
        app:layout_constraintStart_toStartOf="@+id/imgSunrise"
        app:layout_constraintTop_toBottomOf="@+id/imgSunrise" />

    <TextView
        android:id="@+id/tvClock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="18:30"
        android:textColor="@color/colorWhite"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCityName" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Güneşli"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDate"
        app:layout_constraintStart_toStartOf="@+id/tvDate"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="30 May 1987"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/progressDate"
        app:layout_constraintStart_toStartOf="@+id/progressDate"
        app:layout_constraintTop_toBottomOf="@+id/tvWeather" />

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="36°"
        android:textColor="@color/colorWhite"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/progressDate"
        app:layout_constraintStart_toStartOf="@+id/progressDate"
        app:layout_constraintTop_toBottomOf="@+id/tvClock" />

    <ImageView
        android:id="@+id/imgSunrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/progressDate"
        app:layout_constraintStart_toStartOf="@+id/progressDate"
        app:srcCompat="@drawable/ic_sunrise" />

    <ImageView
        android:id="@+id/imgSunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/progressDate"
        app:layout_constraintTop_toTopOf="@+id/imgSunrise"
        app:srcCompat="@drawable/ic_sunset" />

    <TextView
        android:id="@+id/btnMoreInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Daha fazla bilgi >"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/progressDate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:arc_suffix_text=" "
        app:arc_text_size="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClock" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvCityName"
        app:layout_constraintStart_toEndOf="@+id/tvCityName"
        app:layout_constraintTop_toTopOf="@+id/tvCityName"
        app:srcCompat="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>